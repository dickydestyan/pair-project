<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Ticket</title>
</head>
<body style="background-color: #21252B;">
  <%- include('_navbar') %>

  <form method="post" action="/airlines/<%= airline.id %>/buy/tickets" style="width: 60%; margin-left: auto; margin-right: auto;">
    <label class="form-control w-full" style="background-color: #21252B; border: 0; margin-top: 30px;">
        <div class="label">
            <span class="label-text">User Name</span>
        </div>
        <input value="<%= user.name %>" name="name" type="text" placeholder="Type here" class="input input-bordered w-full" style="color: darkgrey;" />

        <div class="label" style="margin-top: 10px;">
          <span class="label-text">Airline</span>
        </div>
        <input value="<%= airline.name + " - " + airline.codeFlight %>" name="airline" type="text" placeholder="Type here" class="input input-bordered w-full" style="color: darkgrey;" />

        <% for( let index = 0; index < (airline.totalSeat - sisaSeat.length); index++ ) { %>
          <div class="card" style="margin-top: 35px; background-color: #21252B; padding: 10px 10px 10px 10px;">
            <div class="label">
              <span class="label-text">Passenger</span>
            </div>
            <select name="passenger<%= index %>" class="select select-bordered w-full" style="color: darkgrey;">
              <option selected>Select Passenger</option>
              <% passengers.forEach(passenger => { %>
                <option value="<%= passenger.id %>"><%= passenger.title + " " + passenger.fullName %></option>
               
              <% }) %>
            </select>

            <div class="label" style="margin-top: 10px;">
              <span class="label-text">Seat Number</span>
            </div>
            <input name="seatNumber<%= index %>" type="text" class="input input-bordered w-full" style="color: darkgrey;" />
          </div>
        
        <% } %>
    </label>

    <button class="btn btn-natural" type="submit" style="margin-top: 30px; margin-bottom: 30p;">Submit</button>
  </form>

  <%- include('_scriptDUI') %>
</body>
</html>