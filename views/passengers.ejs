<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
   
    <title>Document</title>
</head>
<body>
     <!-- Navbar content -->
     <%- include('_navbar') %>
     
        <!--button add Pasangger-->
        <div style="padding: 10px;">
            <tr>
            <a href="/passengers/add" class="btn btn-secondary">Add Pasangger</a>
            </tr>
        </div>

        <!--table pasangger-->
        
            <table class="table">
              <!-- head -->
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Name</th>
                  <th>DateOfBirth</th>
                  <th>Gender</th>
                  <th>Email</th>
                  <th>Nationality</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% passengers.forEach((passenger, idx) => { %>
                  <tr class="bg-base-50">
                    <th><%= idx+1 %></th>
                    <td><%= passenger.fullName %></td>
                    <td><%= passenger.dateFormat() %></td>
                    <td><%= passenger.gender %></td>
                    <td><%= passenger.email %></td>
                    <td><%= passenger.nationality %></td>
                    <td>
                        <a href="/passengers/<%= passenger.id %>/edit" class="btn btn-warning">Edit</a>
                        <a href="/passengers/<%= passenger.id %>/delete" class="btn btn-danger">Delete</a>
                      </td>
                      
                  </tr>
                 
                <% }) %>
              </tbody>
            </table>
             
    








        <!-- script Bp-->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
      
</body>
</html>